<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity ApplicationUser.
    -->
    <changeSet id="20201202143646-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="application_user"
                                 constraintName="fk_application_user_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="post_id"
                                 baseTableName="application_user"
                                 constraintName="fk_application_user_post_id"
                                 referencedColumnNames="id"
                                 referencedTableName="post"/>

        <addForeignKeyConstraint baseColumnNames="comments_id"
                                 baseTableName="application_user"
                                 constraintName="fk_application_user_comments_id"
                                 referencedColumnNames="id"
                                 referencedTableName="comments"/>

        <addForeignKeyConstraint baseColumnNames="reaction_id"
                                 baseTableName="application_user"
                                 constraintName="fk_application_user_reaction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="reaction"/>

    </changeSet>
</databaseChangeLog>
